{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "COVID-19 Cases around the U.K ",
    "subtitle": "New cases by publish date, rolling rate",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },
  "data": {
    "url": "https://api.coronavirus.data.gov.uk/v2/data?areaType=ltla&metric=newCasesByPublishDateRollingRate&format=csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "filter": {
        "field": "areaName",
        "oneOf": ["East Devon", "Glasgow City", "Manchester"]
      }
    }
  ],
  "height": 300,
  "width": 310,
  "mark": {"type": "line","clip":true, "point": false},
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "title": null,
      "axis": {"grid": false}
    },
    "y": {
      "field": "newCasesByPublishDateRollingRate",
      "type": "quantitative",
      "title": null,
      "axis": {"grid": false}
    },
    "color": {
      "field": "areaName",
      "type": "nominal",
      "scale": {"scheme": "set2"},
      "title": null,
      "legend": {"orient": "top-left", "fillColor": "#FcFdFd"}
    }
  },
  "config": {}
}
